<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#477871"
        tools:context=".AmtcEvents"
        tools:layout_editor_absoluteX="58dp"
        tools:layout_editor_absoluteY="64dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/ClubEventTitle"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#ebc20e"
                android:gravity="center"
                android:text="AMTC : EVENTS"
                android:textSize="20sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_upcom_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buttonshape"
                android:text="UPCOMING EVENTS" />

            <Button
                android:id="@+id/btn_curr_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/buttonshape"
                android:text="CURRENT EVENTS" />

            <Button
                android:id="@+id/btn_past_events"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/buttonshape"
                android:text="PAST EVENTS" />


        </LinearLayout>

    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>