<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:id="@+id/drawer">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#f2c82e"
                        android:gravity="center"
                        android:padding="20dp"
                        android:text="Societies"
                        android:textAllCaps="true"
                        android:textColor="#000"
                        android:textSize="50sp"
                        android:textStyle="bold"
                        android:typeface="serif" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="30dp"
                        android:background="#4688cf"
                        android:gravity="center"
                        android:textSize="10sp" />


                </LinearLayout>
                <!--first row-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/phoenix"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight=".50"
                        android:height="126dp"
                        android:background="@drawable/buttonshape"
                        android:gravity="center"
                        android:text="PHOENIX" />

                    <Button
                        android:id="@+id/ecell"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_marginTop="30dp"
                        android:layout_weight=".50"
                        android:height="126dp"
                        android:background="@drawable/buttonshape"
                        android:gravity="center"
                        android:text="E-CELL" />
                </LinearLayout>
                <!--2nd row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/anthra"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight=".50"
                        android:height="126dp"
                        android:background="@drawable/buttonshape"
                        android:gravity="center"
                        android:text="ANTHRA" />

                    <Button
                        android:id="@+id/cyberatics"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight=".50"
                        android:height="126dp"
                        android:background="@drawable/buttonshape"
                        android:gravity="center"
                        android:text="CYBERATICS " />
                </LinearLayout>
                <!--3rd row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/aksa"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight=".50"
                        android:height="126dp"
                        android:background="@drawable/buttonshape"
                        android:gravity="center"
                        android:text="AKSA" />

                    <Button
                        android:id="@+id/anveshana"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight=".50"
                        android:height="126dp"
                        android:background="@drawable/buttonshape"
                        android:gravity="center"
                        android:text="ANVESHANA" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:height="176dp"
                        android:gravity="center"
                        android:text="Go, change the world!" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <!--        <com.google.android.material.navigation.NavigationView-->
        <!--            android:id="@+id/navigview"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="match_parent"-->
        <!--            app:menu="@menu/nav_menu"-->
        <!--            android:background="#fbeec1"-->
        <!--            app:headerLayout="@layout/nav_header"-->
        <!--            android:layout_gravity="start">-->

        <!--        </com.google.android.material.navigation.NavigationView>-->

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>